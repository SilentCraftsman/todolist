<%= form_with(model: @task, local: true) do |form| %>
    <% if @task.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control", placeholder: "Enter task title" %> <!-- Vérifie ici si le champ est bien envoyé -->
    </div>
  
    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", placeholder: "Enter task description", rows: 4 %>
    </div>
  
    <div class="form-check mb-3">
      <%= form.check_box :completed, class: "form-check-input" %>
      <%= form.label :completed, class: "form-check-label" %>
    </div>
  
    <div class="mb-3">
      <%= form.submit "Create Task", class: "btn btn-primary" %>
    </div>
  <% end %>
  